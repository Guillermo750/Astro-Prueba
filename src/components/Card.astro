---
interface Props {
	href: string;
	title: string;
	body: string;
}

const { href, title, body } = Astro.props;
---

<a href={href} class="card">
	<h3>{title}<i class="fa-solid fa-arrow-right fa-xs"></i></h3>
	<p>{body}</p>
</a>
<style>
	.card {
		padding: 0.5rem;
		border-radius: 0.75rem; /* Bordes redondeados */
		text-decoration: none;
		color: white; /* Texto blanco */
		background-color: #rgb(34,36,46);
		text-decoration: none;
		box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2); /* Sombra */
		border: 1px solid #33343C; /* Borde morado */
		width: calc(100% - 1.5rem); /* Ajuste del ancho */
	}
	.card:hover {
		background-color: rgba(255, 255, 255, 0.5); /* Fondo blanco con opacidad al pasar el mouse */
	}
	h3 {
		margin-bottom: .5rem;
		font-size: clamp(1.2rem, calc(1vw + .5rem), 1.5rem);
	}

	.card-container{
		grid-template-columns:auto-fit;
	}
</style>

